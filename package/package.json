{
  "name": "tiptap-footnotes",
  "version": "3.0.0",
  "description": "A footnotes extension for Tiptap",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.mjs",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "prepack": "pnpm run build",
    "test": "vitest --environment=jsdom"
  },
  "exports": {
    "import": "./dist/index.mjs",
    "require": "./dist/index.js"
  },
  "keywords": [
    "tiptap",
    "tiptap extension",
    "tiptap footnotes",
    "footnotes"
  ],
  "author": "Turki Aloufi",
  "files": [
    "dist/"
  ],
  "license": "MIT",
  "devDependencies": {
    "@tiptap/core": "^3.0.0",
    "@tiptap/extension-document": "^3.0.0",
    "@tiptap/extension-list-item": "^3.0.0",
    "@tiptap/extension-ordered-list": "^3.0.0",
    "@tiptap/extension-paragraph": "^3.0.0",
    "@tiptap/extension-text": "^3.0.0",
    "@tiptap/pm": "^3.0.0",
    "esbuild": "^0.21.5",
    "jsdom": "^24.1.3",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vitest": "^2.1.9"
  },
  "peerDependencies": {
    "@tiptap/core": "^3.0.0",
    "@tiptap/extension-list-item": "^3.0.0",
    "@tiptap/extension-ordered-list": "^3.0.0",
    "@tiptap/pm": "^3.0.0"
  },
  "dependencies": {
    "uuid": "^11.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/buttondown/tiptap-footnotes",
    "directory": "package"
  }
